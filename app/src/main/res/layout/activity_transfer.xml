<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.TransferActivity"
    android:background="@color/background">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/card"
        android:elevation="10dp">

      <TextView
          android:text="@string/transfer_doge_to_bot"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/textViewDoge"
          android:textAlignment="center"
          android:textColor="@color/textPrimary"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/textViewBalanceDoge"
          android:layout_marginTop="8dp"
          android:textStyle="bold"
          android:textSize="16sp"
          android:layout_marginBottom="8dp"/>


      <TextView
          android:text="@string/example_balance"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/textViewBalanceDoge"
          android:textColor="@color/textPrimary"
          android:textSize="18sp"
          android:textAlignment="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/textViewDoge"
          app:layout_constraintBottom_toTopOf="@id/editTextAmountDoge"/>

      <EditText
          android:labelFor="@id/textViewDoge"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:inputType="numberDecimal"
          android:ems="10"
          android:id="@+id/editTextAmountDoge"
          android:background="@drawable/edit_text"
          android:textColor="@color/textPrimary"
          android:hint="@string/amount"
          app:layout_constraintTop_toBottomOf="@+id/textViewBalanceDoge"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/buttonSendDoge"
          android:layout_marginStart="18dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="18dp"
          android:autofillHints="@string/amount"
          tools:ignore="LabelFor"/>

      <Button
          android:text="@string/send"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:id="@+id/buttonSendDoge"
          android:background="@drawable/button_success"
          android:textColor="@color/textSecondary"
          app:layout_constraintTop_toBottomOf="@id/editTextAmountDoge"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/dividerDoge"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="8dp"/>

      <View
          android:id="@+id/dividerDoge"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/colorAccent"
          app:layout_constraintTop_toBottomOf="@id/buttonSendDoge"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/buttonSendDogeAll"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"/>

      <Button
          android:text="@string/send_all"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:id="@+id/buttonSendDogeAll"
          android:background="@drawable/button_warning"
          android:textColor="@color/textSecondary"
          app:layout_constraintTop_toBottomOf="@id/dividerDoge"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginEnd="24dp"
          android:layout_marginStart="24dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="18dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/card"
        android:elevation="10dp">

      <TextView
          android:text="@string/transfer_bot_to_doge"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/textViewBot"
          android:textAlignment="center"
          android:textColor="@color/textPrimary"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/textViewBalanceBot"
          android:layout_marginTop="8dp"
          android:textStyle="bold"
          android:textSize="16sp"
          android:layout_marginBottom="8dp"/>

      <TextView
          android:text="@string/example_balance"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/textViewBalanceBot"
          android:textColor="@color/textPrimary"
          android:textSize="18sp"
          android:textAlignment="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/textViewBot"
          app:layout_constraintBottom_toTopOf="@id/editTextAmountBot"
          />

      <EditText
          android:labelFor="@id/textViewBot"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:inputType="numberDecimal"
          android:ems="10"
          android:id="@+id/editTextAmountBot"
          android:background="@drawable/edit_text"
          android:textColor="@color/textPrimary"
          android:hint="@string/amount"
          app:layout_constraintTop_toBottomOf="@+id/textViewBalanceBot"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/buttonSendBot"
          android:layout_marginStart="18dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="18dp"
          android:autofillHints="@string/amount"
          tools:ignore="LabelFor"/>

      <Button
          android:text="@string/send"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:id="@+id/buttonSendBot"
          android:background="@drawable/button_success"
          android:textColor="@color/textSecondary"
          app:layout_constraintTop_toBottomOf="@id/editTextAmountBot"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/dividerBot"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="8dp"/>

      <View
          android:id="@+id/dividerBot"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/colorAccent"
          app:layout_constraintTop_toBottomOf="@id/buttonSendBot"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/buttonSendBotAll"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"/>

      <Button
          android:text="@string/send_all"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:id="@+id/buttonSendBotAll"
          android:background="@drawable/button_warning"
          android:textColor="@color/textSecondary"
          app:layout_constraintTop_toBottomOf="@id/dividerBot"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginEnd="24dp"
          android:layout_marginStart="24dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="18dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </LinearLayout>

</ScrollView>